@model EvergreenAPI.DTO.AccountDTO
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid d-flex flex-column justify-content-center text-center my-5 ftco-animate">
    <h1>Login</h1>
    <hr />
    <div class="row justify-content-center text-left">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group py-2 d-flex align-items-center">
                    <label asp-for="Username" class="control-label w-50"></label>
                    <input asp-for="Username" class="form-control rounded-pill" />
                    <span asp-validation-for="Username" class="text-danger">@ViewData["error"]</span>
                </div>
                <div class="form-group py-2 d-flex align-items-center">
                    <label asp-for="Password" class="control-label w-50"></label>
                    <input asp-for="Password" class="form-control rounded-pill" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group py-2 mt-3">
                    <input type="submit" value="Login" class="btn btn-danger btn-block p-3" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
