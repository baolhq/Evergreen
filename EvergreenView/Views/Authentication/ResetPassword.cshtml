@using EvergreenAPI.DTO
@model ResetPasswordDTO

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
     ViewData["Title"] = "Reset Password";
}
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                @*   <div class="col-md-3 position-absolute" style="left: 0px;top: 3px;">
                <img src="https://iconarchive.com/download/i109813/alex-t/splash-of-fruit/button-strawberry.ico"
                class="img-fluid" alt="Sample image" style="width: 130px;height: 120px;">
                <p class="" style="font-weight: 600;font-size: 20px;line-height: 30px;color: #000000;">SDD System</p>
                </div>*@
                <div class="col-md-8 offset-md-4">
                    <form asp-action="ResetPassword" asp-controller="Authentication" method="post" class="w-50 mt-5 p-5" style="border: 0.5px solid #878787;box-shadow: 0px 4px 64px rgba(0, 0, 0, 0.05);border-radius: 10px;">
                        <div class="divider d-flex align-items-center my-4">
                            <h2 class="text-center  mx-3 mb-0" style="font-weight:700">Reset your password</h2>
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="form3Example3">Token</label>
                            <input asp-for="Token" name="token" type="text" id="form3Example3" class="form-control form-control-lg rounded-pill"
                                   placeholder="Enter your token to reset password" />
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="form3Example3">Password</label>
                            <input asp-for="Password" name="password" type="password" id="form3Example3" class="form-control form-control-lg rounded-pill"
                                   placeholder="Enter your new password" />
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="form3Example3">Confirm Password</label>
                            <input asp-for="ConfirmPassword" name="confirmPassword" type="password" id="form3Example3" class="form-control form-control-lg rounded-pill"
                                   placeholder="Enter your confirm password" />
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2 px-5">
                            <button type="submit" class="btn btn-lg text-white"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem; background-color:#CF2323" value="ResetPassword" id="submitBtn">
                                Submit
                            </button>@ViewData["message"]
                            <p class="small fw-bold mt-2 pt-1 mb-0">
                                Don't have an account? <a asp-controller="Authentication" asp-action="Register"
                                                          class="link-danger font-weight-bold" style="color:#1A763C">Register</a>
                            </p>
                        </div>

                    </form>
                </div>
            </div>
        </div>