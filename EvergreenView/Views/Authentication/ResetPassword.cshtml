@using EvergreenAPI.DTO
@model ResetPasswordDTO

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
     ViewData["Title"] = "Reset Password";
}
<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-password-image">
                            <img src="~/images/tomatoLogin.jpg" class="img-fluid" />
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center" style="margin-top: 25px">
                                    <h1 class="h4 text-gray-900 mb-2">Reset Your Password!</h1>
                                    <p class="mb-4">
                                        To reset your password, enter token below.
                                    </p>
                                </div>
                                <form asp-action="ResetPassword" asp-controller="Authentication" method="post">
                                    <div class="form-group py-2">
                                        <input asp-for="Token" name="token" type="text" id="form3Example3" class="form-control form-control-lg rounded-pill"
                                               placeholder="Enter your token" />
                                    </div>
                                    <div class="form-group py-2">    
                                        <input asp-for="Password" name="password" type="password" id="form3Example3" class="form-control form-control-lg rounded-pill"
                                               placeholder="New password here" />
                                    </div>
                                    <div class="form-group py-2"> 
                                        <input asp-for="ConfirmPassword" name="confirmPassword" type="password" id="form3Example3" class="form-control form-control-lg rounded-pill"
                                               placeholder="Confirm password" />
                                    </div>
                                    <div class="text-center py-2">
                                        <button type="submit" class="btn btn-lg text-white"
                                                style="padding-left: 2.5rem; padding-right: 2.5rem; background-color:#CF2323" value="VerifyAccount" id="submitBtn">
                                            Submit
                                        </button>@ViewData["message"]
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>