@using EvergreenAPI.DTO
@model VerifyAccountDTO

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
     ViewData["Title"] = "Verify Account";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Evergreen</title>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.min.css" rel="stylesheet">
</head>

<body>
    <section class="" style="margin-top: 100px;">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-8 offset-md-4">
                    <form asp-action="VerifyAccount" asp-controller="Authentication" method="post" class="w-50 mt-5 p-5 post_token" style="border: 0.5px solid #878787;box-shadow: 0px 4px 64px rgba(0, 0, 0, 0.05);border-radius: 10px;">
                        <div class="divider d-flex align-items-center my-4">
                            <h2 class="text-center  mx-3 mb-0" style="font-weight:700">Verify your account</h2>
                            <h1 class="h4 text-gray-900 mb-2">Verify Account!</h1>
                            <p class="mb-4">
                                We got it. Please check your email, we have sent you a token to verify your account.
                                Then enter that token below.
                            </p>
                        </div>
                        <input type="text" asp-for="Email" name="email" hidden/>

                        <div class="form-outline mb-4">
                            <input asp-for="Token" name="token" type="text" id="form3Example3" class="form-control form-control-lg"
                                   placeholder="Enter your token here" />
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2 px-5">
                            <button type="submit" class="btn btn-lg text-white"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem; background-color:#CF2323" value="VerifyAccount" id="submitBtn">
                                Submit
                            </button>@ViewData["message"]
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
</body>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"></script>

<script>
    const btn = document.querySelector('.btn-lg')
    const btn2 = document.querySelector('.post_token')
    btn.addEventListener('click',(event)=>
    {
        event.preventDefault();
        Swal.fire
            ({
                title: 'Go to Login!!',
                text: 'Your account is verify!!!',
                icon: 'success',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    btn2.submit()
                    
                }
            })
    });
</script>
</html>