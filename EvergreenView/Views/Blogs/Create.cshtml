@using Microsoft.AspNetCore.Http
@model EvergreenAPI.Models.Blog
@inject IHttpContextAccessor httpContentAccessor
@{
    var session = httpContentAccessor.HttpContext.Session;
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var listImages = ViewData["Thumbnails"] as SelectList;
}
<h1 class="text-dark">Create Blog</h1>
<hr />
            <form asp-action="Create" method="post" class="text-dark">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ViewCount" type="hidden" />
                <input asp-for="LastModifiedDate" type="hidden" />
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group py-2">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" id="summernoteEditor"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div> 
                <div class="form-group py-2">
                    <label asp-for="ThumbnailId" class="control-label"></label>
                    <select asp-for="ThumbnailId" class="form-control" asp-items="listImages"></select>
                </div>
                <div class="form-group py-2">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                    <a asp-action="AdminIndex" class="btn btn-success btn-lg">Back to List</a>
                </div>
            </form>
@section Scripts {
    <script src="~/AdminAssets/lib/summernote-bs4.min.js"></script>
    <link rel="stylesheet" href="~/AdminAssets/lib/summernote-bs4.min.css" />

    <script>
        
        $(document).ready(function () {
            $('#summernoteEditor').summernote({
                tabsize: 2,
                height: 360,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }