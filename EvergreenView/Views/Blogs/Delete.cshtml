@model EvergreenAPI.Models.Blog
@using Microsoft.AspNetCore.Http;
@using System.Net
@inject IHttpContextAccessor httpContentAccessor
@{
    var session = httpContentAccessor.HttpContext.Session;
}
@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="#" type="text/css" />

<div class="container">
    <div class="card card-outline-secondary">
        <div class="card-header">
        </div>
        <div class="card-body">
            <div class="row mt-4  justify-content-center">
                <div class="col-md-6">
                    <div>
                        <div>
                            <div class="img-hover-zoom flex-auto d-none d-md-block card-img-right" style="width: 400px; height: 400px; border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;">
                                <img alt="Thumbnail" style="width: 100%; height: 400px; object-fit: cover;" src="@Model.Image.Url" data-holder-rendered="true">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-sm-12 pb-3">
                        <label for="exampleFirst">Blog Title : </label>
                        <h2>@Model.Title</h2>
                    </div>
                    <div class="col-sm-12 pb-3">
                        <label for="exampleCity">Blog Description :</label>
                        <p>@Model.Description</p>
                        <label for="exampleCity">Blog Content :</label>
                        <p>@Model.Content</p>
                        <label for="exampleCity">Date :</label>
                        <p>@Model.LastModifiedDate</p>
                        <label for="exampleCity">Views :</label>
                        <p>@Model.ViewCount</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="justify-content-between">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="BlogId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>