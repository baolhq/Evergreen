@model EvergreenAPI.Models.Blog
@using Microsoft.AspNetCore.Http;
@using System.Net
@inject IHttpContextAccessor httpContentAccessor
@{
    var session = httpContentAccessor.HttpContext.Session;
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Details";
}

    <div class="container text-dark">
        <div class="card card-outline-secondary">
            <div class="card-header">
            <h4 for="exampleFirst">Blog Title: @Model.Title</h4>
            </div>
            <div class="card-body">
                <div class="container">
                <article>
                    <header class="mb-4">
                        <div class="text-muted fst-italic mb-2">Posted on @Model.LastModifiedDate</div>
                    </header>
                    <section class="mb-5 text-dark">
                        <p class="fs-5 mb-4">@Model.Description</p>
                    </section>
                    <figure class="mb-4"><img alt="Thumbnail" style="width: 100%; height: 400px; object-fit: cover;" src="@Model.Thumbnail.Url" data-holder-rendered="true"></figure>
                    <section class="mb-5 text-dark">
                        <div>
                            @Html.Raw(WebUtility.HtmlDecode(Model.Content))
                        </div>
                    </section>
                </article>
                </div>
            </div>
            <div class="card-footer">
                <div class="justify-content-between">
                <a asp-action="Delete" asp-route-id="@Model.BlogId" class="btn btn-danger px-5"> <i class="far fa-trash-alt"></i> </a>
                <a asp-action="Edit" asp-route-id="@Model.BlogId" class="btn btn-warning px-5"> <i class="fas fa-edit"></i> </a>
                    <a asp-action="AdminIndex" class="btn btn-success px-5"> Back To List</a>
                </div>
            </div>
        </div>
    </div>

