@model EvergreenAPI.Models.Blog
@using Microsoft.AspNetCore.Http;
@using System.Net
@inject IHttpContextAccessor httpContentAccessor
@{
    var session = httpContentAccessor.HttpContext.Session;
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Details";
}

    <div class="container text-dark">
        <div class="card card-outline-secondary">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div class="row mt-4  justify-content-center">
                    <div class="col-md-6">
                        <div>
                            <div>
                            <div class="img-hover-zoom flex-auto d-none d-md-block card-img-right" style="width: 400px; height: 400px; border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;">
                                <img alt="Thumbnail" style="width: 100%; height: 400px; object-fit: cover;" src="@Model.Thumbnail.Url" data-holder-rendered="true">
                            </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-sm-12 pb-3">
                            <label for="exampleFirst">Blog Title : </label>
                            <h2>@Model.Title</h2>
                        </div>
                        <div class="col-sm-12 pb-3">
                            <label for="exampleCity">Blog Description :</label>
                            <p>@Model.Description</p>
                            <label for="exampleCity">Blog Content :</label>
                            <p>@Model.Content</p>
                            <label for="exampleCity">Date :</label>
                            <p>@Model.LastModifiedDate</p>
                            <label for="exampleCity">Views :</label>
                            <p>@Model.ViewCount</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="justify-content-between">
                <a asp-action="Delete" asp-route-id="@Model.BlogId" class="btn btn-danger px-5"> Delete </a>
                <a asp-action="Edit" asp-route-id="@Model.BlogId" class="btn btn-warning px-5"> Update </a>
                    <a asp-action="AdminIndex" class="btn btn-success px-5"> Back to List</a>
                </div>
            </div>
        </div>
    </div>

