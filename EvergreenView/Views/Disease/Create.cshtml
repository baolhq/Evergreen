@using Microsoft.AspNetCore.Http
@model EvergreenAPI.Models.Disease
@inject IHttpContextAccessor httpContentAccessor
@{
    var session = httpContentAccessor.HttpContext.Session;
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create";
    var listDiseaseCategories = ViewData["DiseaseCategories"] as SelectList;
    var listImages = ViewData["Thumbnails"] as SelectList;
}

<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.min.css" rel="stylesheet">

<h1 class="text-dark">Create Disease</h1>
<hr />
    <div class="row">
        <div class="col-md-4">
        <form asp-action="Create" class="text-dark" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group py-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group py-2">
                    <label asp-for="Identification" class="control-label"></label>
                    <input asp-for="Identification" class="form-control" />
                    <span asp-validation-for="Identification" class="text-danger"></span>
                </div>
                <div class="form-group py-2">
                    <label asp-for="Affect" class="control-label"></label>
                    <input asp-for="Affect" class="form-control" />
                    <span asp-validation-for="Affect" class="text-danger"></span>
                </div>
                <div class="form-group py-2">
                    <label asp-for="DiseaseCategoryId" class="control-label"></label>
                    <select asp-for="DiseaseCategoryId" class="form-control" asp-items="listDiseaseCategories"></select>
                </div>
                <div class="form-group py-2">
                    <label asp-for="ThumbnailId" class="control-label"></label>
                    <select asp-for="ThumbnailId" class="form-control" asp-items="listImages"></select>
                </div>
                <div class="form-group py-2">
                    <input type="submit" value="Create"  class="btn btn-primary" /> 
                    <a asp-action="AdminIndex" class="btn btn-success">Back to List</a>
                </div>
            </form>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"></script>
@if(ViewBag.Message != null)
{
    <script>
        Swal.fire({
            position: 'top-end',
            icon: 'success',
            alert("@ViewBag.Message"),
            showConfirmButton: false,
            timer: 1500
        })
    </script>
}



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
