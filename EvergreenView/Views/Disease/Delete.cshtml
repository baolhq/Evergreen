@model EvergreenAPI.Models.Disease
@using Microsoft.AspNetCore.Http;
@using System.Net
@inject IHttpContextAccessor httpContentAccessor
@{
    var session = httpContentAccessor.HttpContext.Session;
}
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.min.css" rel="stylesheet">

<div class="container">
    <div class="card card-outline-secondary">
        <div class="card-header">
        </div>
        <div class="card-body">
            <div class="row mt-4  justify-content-center">
                <div class="col-md-6">
                    <div>
                        <div>
                            <div class="img-hover-zoom flex-auto d-none d-md-block card-img-right" style="width: 400px; height: 400px; border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;">
                                <img alt="Thumbnail" style="width: 100%; height: 400px; object-fit: cover;" src="@Model.Thumbnail.Url" data-holder-rendered="true">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-sm-12 pb-3">
                        <label for="exampleFirst">Disease Title : </label>
                        <h2>@Model.Name</h2>
                    </div>
                    <div class="col-sm-12 pb-3">
                        <label for="exampleCity">Disease Description :</label>
                        <p>@Model.Identification</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="justify-content-between">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="DiseaseId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                    <a asp-action="AdminIndex" class="btn btn-success"> Back to List </a>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"></script>
<script>
    const formPlace = document.querySelector('.btn-danger')
    formPlace.addEventListener('click', (e) => {
        e.preventDefault()
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                sessionStorage.setItem("lastname", "Smith");
            }
        })
        })
</script>