@model EvergreenAPI.Models.Disease
@using Microsoft.AspNetCore.Http;
@using System.Net
@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/detailsdisease.css" type="text/css" />

<div class="container">
    <div class="card card-outline-secondary">
        <div class="card-header">

            

        </div>
        <div class="card-body">
            <div class="row mt-4  justify-content-center">
                <div class="col-md-6">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="box-shadow: 5px 2px 3px grey">
                        <div class="carousel-inner">
                           
                                  <div class="img-hover-zoom flex-auto d-none d-md-block card-img-right" style="width: 250px; height: 250px; border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;">
                        <img alt="Thumbnail" style="width: 100%; height: 250px; object-fit: cover;" src="@Model.Image.Url" data-holder-rendered="true">
                    </div>
                           
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                   

                   
                </div>
                <div class="col-md-6">
                    <div class="col-sm-12 pb-3">
                        <label for="exampleFirst">Disease Title : </label>
                        <h2>@Model.Name</h2>
                    </div>
                    <div class="col-sm-12 pb-3">
                        <label for="exampleCity">Disease Description</label>
                        <p>@Model.Identification</p>
                        @*@Html.Raw(WebUtility.HtmlDecode(Model.Description))*@
                    </div>
                </div>



            </div>
        </div>
        <div class="card-footer">
            <div class="justify-content-between">
                <a asp-action="Index" class="btn border border-success px-5"><i class="fa-regular fa-circle-left" style="color:green"></i> Back </a>

            </div>
        </div>
    </div>
</div>