@model EvergreenAPI.Models.Medicine
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create";
    var listMedicineCategories = ViewData["MedicineCategories"] as SelectList;
    var listImages = ViewData["Thumbnails"] as SelectList;
    var listDiseases = ViewData["Diseases"] as SelectList;
}

<div class="row">
    <div class="col-md-4 text-dark">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group py-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <label asp-for="Uses" class="control-label"></label>
                <input asp-for="Uses" class="form-control" />
                <span asp-validation-for="Uses" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <label asp-for="MedicineCategoryId" class="control-label"></label>
                <select asp-for="MedicineCategoryId" class="form-control" asp-items="listMedicineCategories"></select>
            </div>
            <div class="form-group py-2">
                <label asp-for="DiseaseId" class="control-label"></label>
                <select asp-for="DiseaseId" class="form-control" asp-items="listDiseases"></select>
            </div>
             <div class="form-group py-2">
                    <label asp-for="ThumbnailId" class="control-label"></label>
                    <select asp-for="ThumbnailId" class="form-control" asp-items="listImages"></select>
             </div>
            <div class="form-group py-2">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="AdminIndex" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
