@model EvergreenAPI.Models.Medicine
@using Microsoft.AspNetCore.Http;
@using System.Net
@inject IHttpContextAccessor httpContentAccessor
@{
    var session = httpContentAccessor.HttpContext.Session;
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="card card-outline-secondary">
        <div class="card-header">
        </div>
        <div class="card-body">
            <div class="row mt-4  justify-content-center">
                <div class="col-md-6">
                    <div>
                        <div>
                            <div class="img-hover-zoom flex-auto d-none d-md-block card-img-right" style="width: 400px; height: 400px; border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;">
                                <img alt="Thumbnail" style="width: 100%; height: 400px; object-fit: cover;" src="@Model.Image.Url" data-holder-rendered="true">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-sm-12 pb-3">
                        <label for="exampleCity">Disease :</label>
                        <p>@Model.Disease.Name</p>
                    </div>
                    <div class="col-sm-12 pb-3">
                        <label for="exampleFirst">Medicine Title : </label>
                        <h2>@Model.Name</h2>
                    </div>
                    <div class="col-sm-12 pb-3">
                        <label for="exampleCity">Medicine Description :</label>
                        <p>@Model.MedicineCategory.Name</p>
                        <p>@Model.Uses</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="MedicineId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="AdminIndex" class="btn btn-success">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>