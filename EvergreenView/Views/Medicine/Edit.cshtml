@model EvergreenAPI.Models.Medicine
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit";
    var listImages = ViewData["Images"] as SelectList;
    var listDiseases = ViewData["Diseases"] as SelectList;
    var listMedicineCategories = ViewData["MedicineCategories"] as SelectList;
}
<h1>Edit</h1>
<h4>Medicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MedicineId" />
            <div class="form-group py-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <label asp-for="Uses" class="control-label"></label>
                <input asp-for="Uses" class="form-control" />
                <span asp-validation-for="Uses" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <label asp-for="MedicineCategoryId" class="control-label"></label>
                <select asp-for="MedicineCategoryId" class="form-control" asp-items="listMedicineCategories"></select>
            </div>
            <div class="form-group py-2">
                <label asp-for="DiseaseId" class="control-label"></label>
                <select asp-for="DiseaseId" class="form-control" asp-items="listDiseases"></select>
            </div>
            <div class="form-group py-2">
                <label asp-for="ImageId" class="control-label"></label>
                <select asp-for="ImageId" class="form-control" asp-items="listImages"></select>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="AdminDetails" asp-route-id="@Model.MedicineId" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
