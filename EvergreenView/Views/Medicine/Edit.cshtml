@model EvergreenAPI.Models.Medicine
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit " + Model.Name;
    var listImages = ViewData["Thumbnails"] as SelectList;
    var listMedicineCategories = ViewData["MedicineCategories"] as SelectList;
}
<h1 class="text-dark">Update Medicine</h1>
<hr/>
<div class="container">
    <form asp-action="Edit" method="post" class="text-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MedicineId"/>
        <div class="form-group py-2">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group py-2">
            <label asp-for="Uses" class="control-label"></label>
            <input asp-for="Uses" class="form-control"/>
            <span asp-validation-for="Uses" class="text-danger"></span>
        </div>
        <div class="form-group py-2">
            <label asp-for="MedicineCategoryId" class="control-label"></label>
            <select asp-for="MedicineCategoryId" class="form-control" asp-items="listMedicineCategories"></select>
        </div>

        <div class="form-group py-2">
            <label asp-for="ThumbnailId" class="control-label"></label>
            <select asp-for="ThumbnailId" class="form-control" asp-items="listImages"></select>
        </div>
        <div class="form-group py-2">
            <input type="submit" value="Save" class="btn btn-primary"/>
            <a asp-action="AdminIndex" class="btn btn-success">Back To List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}