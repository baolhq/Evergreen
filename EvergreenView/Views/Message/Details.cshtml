@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContentAccessor
@{
    var session = httpContentAccessor.HttpContext.Session;
}
@model EvergreenAPI.Models.Message
@{
}

<h1>Details</h1>
<h4>Message</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.FullName)
        </dd>
    </dl>
</div>
@if (session.GetString("Role") == ("Admin"))
               {
<div>
    <a asp-action="Edit" asp-route-id="@Model.MessageId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>
               } else if (session.GetString("Role") == ("User"))
{
    <div>
        <a asp-action="UserEdit" asp-route-id="@Model.MessageId" class="btn btn-warning">Edit</a> |
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>

}

               
