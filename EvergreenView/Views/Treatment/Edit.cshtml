@model EvergreenAPI.Models.Treatment
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit";
    var listDiseases = ViewData["Diseases"] as SelectList;
    var listImages = ViewData["Images"] as SelectList;
}

<div class="row">
    <div class="col-md-4 text-dark">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TreatmentId" />
            <div class="form-group py-2">
                <label asp-for="Method" class="control-label"></label>
                <input asp-for="Method" class="form-control" />
                <span asp-validation-for="Method" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <label asp-for="DiseaseId" class="control-label"></label>
                <select asp-for="DiseaseId" class="form-control" asp-items="listDiseases"></select>
            </div>
            <div class="form-group py-2">
                <label asp-for="ImageId" class="control-label"></label>
                <select asp-for="ImageId" class="form-control" asp-items="listImages"></select>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="AdminIndex" class="btn btn-outline-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }